
<%= form_for @post, html: {class: 'form-horizontal col-sm-8'} do |f| %>
	<h1><%= @post.new_record? ? "New" : "Edit" %></h1>
	<div class="form-group">
		<%= f.label :date, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.date_field :date, class: 'form-control' %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :rationale, class: 'col-sm-2 control-label'%>
		<div class="col-sm-10">
			<%= f.text_area :rationale, class: 'form-control' %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit 'Save', class: 'btn btn-default' %>
		</div>
	</div>
<% end %>
